@using Umbraco.Cms.Core.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
 <div class="showcase">
    <div class="container">
        <div class="content">
            <h1>@Model.Value("showcaseTitle")</h1>
            <p>@Model.Value("showcaseDescription")</p>
            <div class="buttons">
                <a href="@Model.Value("showcaseButtonUrl")" class="button-theme">@Model.Value("showcaseButtonText")<i class="fa-regular fa-arrow-up-right"></i></a>
                <a href="" class="button-light-theme">Learn More<i class="fa-regular fa-arrow-up-right"></i></a>
            </div>
        </div>
        @{
            var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
            if(showcaseImage != null)
            {
                <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
            }
        }
    </div>
    <img id="showcaseEffect" src="images/background-effects/background-lines.svg">
</div>