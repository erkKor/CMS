                    }
                }
                <h3>@Model.Value("mOTMemberName2")</h3>
                <p>@Model.Value("mOTMemberTitle2")</p>
            </div>
            <div class="member">
                @{
                    var mOTImage3 = Model.Value<MediaWithCrops>("mOTImage3");
                    if (mOTImage3 != null)
                    {
                        <img src="@mOTImage3.MediaUrl()" alt="@Model.Value("mOTMemberTitle3")" />
                    }
                }
                <h3>@Model.Value("mOTMemberName3")</h3>
                <p>@Model.Value("mOTMemberTitle3")</p>
            </div>
            <div class="member">
                @{
                    var mOTImage4 = Model.Value<MediaWithCrops>("mOTImage4");
                    if (mOTImage4 != null)
                    {
                        <img src="@mOTImage4.MediaUrl()" alt="@Model.Value("mOTMemberTitle4")" />
                    }
                }
                <h3>@Model.Value("mOTMemberName4")</h3>
                <p>@Model.Value("mOTMemberTitle4")</p>
            </div>
        </div>
    </div>
</section>